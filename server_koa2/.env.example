# ================================
# 基础配置
# ================================
# 环境 development/production/test
NODE_ENV=development
# 服务器配置
PORT=3000
HOST=localhost
API_PREFIX=/api
BASE_URL=http://localhost:3000

# ================================
# 安全配置
# ================================
# JWT配置
JWT_SECRET=8a29ab14c4d6e8f0123456789abcdef0123456789abcdef0123456789abcdef0
JWT_EXPIRES_IN=24h/7d
# 密码加密
BCRYPT_SALT_ROUNDS=10
# Cookie配置
COOKIE_SECRET=your_cookie_secret_here
# CORS配置
CORS_ORIGIN=http://localhost:4200
# 速率限制
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# ================================
# 数据库配置
# ================================
# PostgreSQL配置
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password
# 连接池配置
DB_POOL_MIN=5
DB_POOL_MAX=10
DB_TIMEOUT=60000

# ================================
# Redis配置
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_PREFIX=myapp:

# ================================
# 文件上传配置
# ================================
UPLOAD_DIR=public/uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf

# ================================
# 日志配置
# ================================
LOG_LEVEL=info
LOG_DIR=logs
LOG_FORMAT=combined
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7d

# ================================
# 邮件配置
# ================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your_email@gmail.com
MAIL_PASSWORD=your_email_password
MAIL_FROM=noreply@yourapp.com

# ================================
# 第三方服务配置
# ================================
# 阿里云OSS
OSS_REGION=oss-cn-beijing
OSS_ACCESS_KEY_ID=your_access_key_id
OSS_ACCESS_KEY_SECRET=your_access_key_secret
OSS_BUCKET=your_bucket_name

# 短信服务
SMS_APP_ID=your_sms_app_id
SMS_APP_KEY=your_sms_app_key
SMS_TEMPLATE_ID=your_sms_template_id

# ================================
# 支付配置
# ================================
# 支付宝
ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_PRIVATE_KEY=your_alipay_private_key
ALIPAY_PUBLIC_KEY=your_alipay_public_key

# 微信支付
WXPAY_APP_ID=your_wxpay_app_id
WXPAY_MCH_ID=your_wxpay_mch_id
WXPAY_API_KEY=your_wxpay_api_key

# ================================
# 缓存配置
# ================================
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600

# ================================
# 会话配置
# ================================
SESSION_SECRET=your_session_secret
SESSION_MAX_AGE=86400000

# ================================
# 监控配置
# ================================
ENABLE_METRICS=true
METRICS_PREFIX=myapp_
ENABLE_TRACING=true

# ================================
# 其他自定义配置
# ================================
# 业务相关配置
BUSINESS_FEATURE_FLAG=true
DEFAULT_LANGUAGE=zh-CN
DEFAULT_TIMEZONE=Asia/Shanghai